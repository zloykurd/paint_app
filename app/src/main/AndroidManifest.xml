<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="developer.zloykurd.luboy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="developer.zloykurd.luboy.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/PopupTheme" >
        </activity>
        <activity
            android:name="developer.zloykurd.luboy.BrushFragment"
            android:label="@string/title_activity_brush_fragment" >
        </activity>
        <activity
            android:name="developer.zloykurd.luboy.EraserFragment"
            android:label="@string/title_activity_eraser_fragment" >
        </activity>
        <activity
            android:name="developer.zloykurd.luboy.ShapesFragment"
            android:label="@string/title_activity_shapes_fragment" >
        </activity>

    </application>

</manifest>